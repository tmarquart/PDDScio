<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context=".activities.MainActivity">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".activities.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="SCiO SDK Test Application"
                android:textColor="#000"
                android:textSize="22dp"/>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/textView">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Cloud API"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:onClick="doLogin"
                            android:text="Login"/>

                        <Button
                            android:id="@+id/buttonLogout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/button"
                            android:layout_toRightOf="@+id/button"
                            android:onClick="doLogout"
                            android:text="LOGOUT"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/scioVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/button"
                            android:onClick="getScioVersion"
                            android:text="SCiO Version"
                            />

                        <Button
                            android:id="@+id/button_scan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="doScan"
                            android:text="Analyze"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_models"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/button"
                            android:onClick="doModels"
                            android:text="Get Models"
                            />

                        <Button
                            android:id="@+id/button_cp_models"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/button"
                            android:onClick="doCPModels"
                            android:text="Get CP Models"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Device API"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_discover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:onClick="doDiscover"
                            android:text="Discover"/>

                        <Button
                            android:id="@+id/button_connect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:onClick="doConnect"
                            android:text="Connect"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_calibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:onClick="doCalibrate"
                            android:text="Calibrate"/>

                        <Button
                            android:id="@+id/button_disconnect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="doDisconnect"
                            android:text="Disconnect"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_rename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:onClick="doRename"
                            android:text="Rename"/>

                        <Button
                            android:id="@+id/button_read_battery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="readBattery"
                            android:text="Read Battery"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_is_calibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:onClick="checkCalibration"
                            android:text="Is Calibration Needed"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Examples"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/start_cached_scanning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:onClick="startCachedScanning"
                        android:text="Cached Multi Scanning Example"/>

                    <RelativeLayout
                        android:id="@+id/details"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="8"
                                    android:text="SCiO Name"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                                <TextView
                                    android:id="@+id/tv_scio_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="9"
                                    android:text="-"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="8"
                                    android:paddingRight="5dp"
                                    android:text="SCiO Address"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                                <TextView
                                    android:id="@+id/tv_scio_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="9"
                                    android:text="-"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="8"
                                    android:text="Status"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                                <TextView
                                    android:id="@+id/tv_scio_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="9"
                                    android:text="-"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="8"
                                    android:paddingTop="10dp"
                                    android:text="Username"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                                <TextView
                                    android:id="@+id/tv_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="9"
                                    android:text="-"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textViewModel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="8"
                                    android:text="Model"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                                <TextView
                                    android:id="@+id/tv_model"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="9"
                                    android:text="-"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                            </TableRow>
                        </TableLayout>

                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:src="@drawable/connections_bg"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/element_padding"
            android:text="1.0"/>

    </RelativeLayout>

</ScrollView>
